<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".desc_fourni">

    <!--Pour arriver sur cette page qui détaille un fournisseur choisit, il vous suffit de cliquer sur le
    fournisseur que vous voulez dans la page liste fournisseur -->

    <!--Nom du Fournisseur-->
    <TextView
        android:id="@+id/nomfournisolo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Fournisseur (Nom)"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!--[Intitulé] Description du Fournisseur-->
    <TextView
    android:id="@+id/desc"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:text="Description : "
    android:textAllCaps="false"
    android:textSize="20dp"
    android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
    android:textColor="@color/colorAccent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/nomfournisolo"
    />
    <!--[Texte] Description du Fournisseur-->
    <TextView
        android:id="@+id/desctext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec finibus vestibulum auctor. Ut maximus vehicula nisl id ornare. Donec turpis lectus, dictum non leo at, ullamcorper malesuada ex. Sed ut risus eu sem hendrerit mollis rutrum et nulla. Ut in metus sit amet dui lobortis tincidunt "
        android:textAllCaps="false"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc"
        />
    <!--[Intitulé] Adresse du Fournisseur-->
    <TextView
        android:id="@+id/descadre"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="Adresse :"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desctext"
        />
    <!--[Intitulé] Numéro de téléphone du Fournisseur-->
    <TextView
        android:id="@+id/desctel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Téléphone :"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@id/descadre"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desctext"/>
    <!--[Texte] Adresse du Fournisseur-->
    <TextView
        android:id="@+id/adresse"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec finibus vestibulum auctor."
        android:textAllCaps="false"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descadre"
        />
    <!--[Texte] Numéro de téléphone du Fournisseur-->
    <TextView
        android:id="@+id/tel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="XX.XX.XX.XX.XX"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desctel"/>

    <!--[Intitulé] Mail du Fournisseur-->
    <TextView
    android:id="@+id/descmail"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="Adresse Mail : "
    android:textAllCaps="false"
    android:textSize="12dp"
    android:layout_marginTop="15dp"
    android:textColor="@color/colorAccent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/adresse"/>
    <!--[Texte] Mail du Fournisseur-->
    <TextView
        android:id="@+id/mail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Lorem@mail.com"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@id/descmail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adresse"/>

    <!--[Intitulé] Localisation du Fournisseur-->
    <TextView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="GOOGLE MAP "
        android:textAllCaps="false"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descmail"
        />
    <!--[Bouton] Modifier un Fournisseur-->
    <Button
    android:id="@+id/BTNModif"
    android:layout_width="120dp"
    android:layout_height="35dp"
    android:background="@drawable/buttongo"
    android:text="Modifier "
    android:textColor="@color/colorPrimary"
    android:textAllCaps="false"
    android:layout_marginLeft="60dp"
    android:textSize="17dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/map"/>

    <!--[Bouton] Supprimer un Fournisseur-->
    <Button
        android:id="@+id/BTNSuppr"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@drawable/buttongo"
        android:text="Supprimer"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_marginLeft="60dp"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/BTNModif"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"/>
</android.support.constraint.ConstraintLayout>